{
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentSize": 4,
    "lineWidth": 120,
    "ignore": [
      "packages/sfpowerscripts-cli/resources/cytoscape.min.js",
      "packages/sfdc-soup/",
      "packages/forcemula",
      "packages/sfp-cli/npm-shrinkwrap.json",
      "packages/sfpowerscripts-cli/resources/dagre.js"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": 
       {
        "noDoubleEquals":"off",
        "noExplicitAny":"warn"
       },
      "style": {
        "noUnusedTemplateLiteral": "off",
        "useConst": "off",
        "useSingleVarDeclarator":"warn"
         
      }
    }
  }
}