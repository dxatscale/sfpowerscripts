{
    "compileOnSave": true,
    "compilerOptions": {
        "composite": true,
        "outDir": "./lib",
        "rootDir": "./src",
        "inlineSourceMap": true,
        "declaration": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "es6",
        "lib": ["es6"],
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "src/**/*.json"],
    "exclude": ["node_modules", "lib"]
}