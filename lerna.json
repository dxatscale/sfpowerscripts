{
    "$schema": "node_modules/lerna/schemas/lerna-schema.json",
    "packages": ["packages/*"],
    "version": "independent",
    "command": {
        "publish": {
            "yes": true,
            "ignoreChanges": ["*.md"],
            "registry": "https://registry.npmjs.org",
            "message": "chore(publish): update versions and publish to npm"
        }
    }
}
