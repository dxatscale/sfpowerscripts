<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Scratch_org_is_already_in_use</fullName>
    <active>true</active>
    <errorConditionFormula>ISPICKVAL( Allocation_status__c , &quot;Allocate&quot;) &amp;&amp; ISPICKVAL( PRIORVALUE(Allocation_status__c) , &quot;Assigned&quot;) &amp;&amp; ISCHANGED(Allocation_status__c)</errorConditionFormula>
